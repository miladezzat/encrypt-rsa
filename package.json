{
  "name": "encrypt-rsa",
  "version": "4.0.0",
  "description": "This is a little module use to encrypt and decrypt strings with RSA keys (public and private keys)",
  "main": "./build/node/node/index.js",
  "module": "./build/node/node/index.js",
  "browser": "./build/web/web/index.js",
  "types": "./build/node/node/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "node": "./build/node/node/index.js",
        "default": "./build/web/web/index.js"
      },
      "require": {
        "node": "./build/node/node/index.js",
        "default": "./build/web/web/index.js"
      }
    }
  },
  "files": [
    "build/node/**/*",
    "build/web/**/*"
  ],
  "source": "./src/node/index.ts",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "depcheck": "npm-check -u",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.node.json && tsc -p tsconfig.web.json",
    "commit": "git-cz",
    "docs:serve": "docsify serve docs",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepublish": "npm run build",
    "husky": "husky",
    "lint": "eslint",
    "docs": "npx @compodoc/compodoc -p tsconfig.doc.json -d docs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.23.4",
    "generate-changelog": "^1.8.0",
    "git-cz": "^4.7.6",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "npm-check": "^6.0.1",
    "pinst": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "algorithm",
    "node",
    "encryption",
    "public key",
    "private key",
    "rsa",
    "node-rsa",
    "encrypt-rsa",
    "encrypt",
    "encrypt by public key",
    "decrypt by private key",
    "rsa encryption",
    "node-rsa typescript",
    "Crypto-js RSA",
    "Javascript RSA encryption"
  ],
  "author": "Milad E. Fahmy <miladezzat.f@gmail.com> (https://milad-ezzat.vercel.app)",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miladezzat/encrypt-rsa.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miladezzat/encrypt-rsa/issues"
  },
  "homepage": "https://encrypt-rsa.js.org"
}
